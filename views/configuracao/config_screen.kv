<ConfigScreenView>
    name: 'config'
    #Topo

    MDBoxLayout:
        orientation: 'vertical'
        spacing: 10
        md_bg_color: get_color_from_hex(app.getColor('Blue','900'))

        #TOPO
        MDTopAppBar:
            title: 'Configurações'
            left_action_items: [["arrow-left", lambda x: app.setScreen('splash', 'right')]]
            right_action_items: [["magnify", lambda x: app.callback(x)]]
            md_bg_color: get_color_from_hex(app.getColor('Blue','900'))

        MDBoxLayout:
            orientation: 'vertical'
            adaptive_height: True
            padding: [0,20,0,30]
            Image:
                source: 'assets/images/icone.png'
                allow_streach: True
                keep_ratio: False
                size_hint: None, None
                size: '100dp', '100dp'
                pos_hint: {'center_x': 0.5,'center_y': 0.5}

            MDLabel:
                text: 'AUTOPESO'
                halign: 'center'
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                adaptive_height: True

        #Content
        MDBoxLayout:
            padding: ('20dp', '20dp', '20dp', '20dp')
            orientation: 'vertical'
            radius: [20,20,0,0]
            md_bg_color: [.95,.95,.95,1]
            spacing: 10

            MDLabel:
                text: "  DATA"
                adaptive_height: True

            MDCard:
                size_hint_y: None
                height: "60dp"
                radius: 10
                md_bg_color: [.88,.87,.92,1]

                OneLineAvatarListItem:
                    id: btDataHora
                    text: 'Configurar Data e Hora'
                    theme_text_color: 'Custom'
                    text_color: [.26,.26,.26,1]
                    on_release: app.setScreen('configData')
                    ImageLeftWidget:
                        source: 'assets/icons/calendar.png'
                        size_hint: None, None
                        size: "30dp", "30dp"
                        pos_hint: {'center_x': 0.5,'center_y': 0.6}
            MDLabel:
                size_hint_y:0.1

            MDLabel:
                text: "  CAIXA"
                adaptive_height: True

            MDCard:
                size_hint_y: None
                height: "60dp"
                radius: 10
                md_bg_color: [.88,.87,.92,1]

                OneLineAvatarListItem:
                    id: btCaixa
                    text: 'Configurar entradas'
                    theme_text_color: 'Custom'
                    text_color: [.26,.26,.26,1]
                    on_release:
                        app.getScreen('configCaixa').ids.btValor.secondary_text = app.ValorKg
                        app.setScreen('configCaixa')

                    ImageLeftWidget:
                        source: 'assets/icons/coins.png'
                        size_hint: None, None
                        size: "30dp", "30dp"
                        pos_hint: {'center_x': 0.5,'center_y': 0.6}
            MDLabel:
                size_hint_y:0.1

            MDLabel:
                text: "  COMUNICAÇÃO"
                adaptive_height: True

            MDCard:
                orientation: 'vertical'
                size_hint_y: None
                height: "120dp"
                radius: 10
                padding: [0, 20, 10, 0]
                md_bg_color: [.88,.87,.92,1]

                OneLineAvatarListItem:
                    id: btBluetooth
                    text: 'Bluetooth'
                    theme_text_color: 'Custom'
                    text_color: [.26,.26,.26,1]
                    pos_hint: {'top': 1}
                    on_release:
                        app.getScreen('configSerial').ids.lblPorta.secondary_text = app.porta
                        app.setScreen('configSerial')
                    ImageLeftWidget:
                        source: 'assets/icons/bluetooth.png'
                        size_hint: None, None
                        size: "30dp", "30dp"
                        pos_hint: {'center_x': 0.5,'center_y': 0.5}

                OneLineAvatarListItem:
                    id: btSerial
                    text: 'Serial'
                    theme_text_color: 'Custom'
                    text_color: [.26,.26,.26,1]
                    pos_hint: {'center_y': 0.5}
                    on_release:
                        app.getScreen('configSerial').ids.lblPorta.secondary_text = app.porta
                        app.setScreen('configSerial')
                    ImageLeftWidget:
                        source: 'assets/icons/serial.png'
                        size_hint: None, None
                        size: "30dp", "30dp"
                        pos_hint: {'center_x': 0.5,'center_y': 0.5}

            Widget:
